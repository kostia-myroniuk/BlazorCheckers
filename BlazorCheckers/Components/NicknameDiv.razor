@using Microsoft.AspNetCore.SignalR.Client

@namespace BlazorCheckers.Components

<div class="form-group">
    <label>Nickname:<input @bind="nicknameInput"/></label>
    <button class="btn btn-primary" @onclick="ChangeNickname" disabled="@(!IsConnected)">Ok</button>
</div>

@code {
    [Parameter]
    public HubConnection? HubConnection { get; set; }

    public bool IsConnected =>
        HubConnection?.State == HubConnectionState.Connected;
    
    private string? nicknameInput = "No name";

    private async Task ChangeNickname()
    {
        if (HubConnection is not null)
        {
            await HubConnection.SendAsync("EnterNickname", nicknameInput);
        }
    }
}
